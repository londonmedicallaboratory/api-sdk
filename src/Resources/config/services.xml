<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <instanceof id="LML\SDK\Repository\RepositoryInterface">
            <tag name="lml_sdk.repository"/>
        </instanceof>

        <service id="lml_api.client" class="LML\SDK\Service\Client\Client"/>

        <service id="lml_api.product_repository" class="LML\SDK\Repository\Product\ProductRepository"/>
        <service id="lml_api.identity_map" class="LML\SDK\Service\IdentityMap\IdentityMap"/>

    </services>
</container>
